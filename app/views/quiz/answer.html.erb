<div class="answer">

<div class="centerQuestions">
<h1>Question <%= @current + 1 %> of <%= @total %></h1>
<p id="question"><%= @question.text %></p>
</div>

<div id="feedback-choices" class="centerQuestions">
  <% @choices.each do |choice| %>
	 <% if choice.correct %>
		<p class="correct feedback-choice">
	 <% elsif choice == @choice %>
		<p class="incorrect feedback-choice">
	 <% else %>
		<p class="feedback-choice">
	 <% end %>
		<span class="centerQuestions"> <%= choice.text %> </span>
	 </p>
  <% end %>
</div>

<p class="feedback">
  <% if @correct %>
	 Correct!
  <% else %>
	 Incorrect.
  <% end %>
</p>


<%= form_tag({:controller => "quiz", :action => "question"}) do %>
  <div class="center">
	 <%= submit_tag("Continue", :class => "submit") %>
  </div>
<% end %>

<% content_for(:title) do %>
  Question <%= @current + 1 %> of <%= @total %>
<% end %>

